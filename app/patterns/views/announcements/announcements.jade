header
  include ../partials/breadcrumbs
  section.summary
    h1 #{discussion.title}
    if discussion.description
      p !{discussion.description}

section.topics
  <div id="amzn-assoc-ad-4ab47a23-5544-4fcd-83f3-c3b09feaf577"></div><script async src="//z-na.amazon-adsystem.com/widgets/onejs?MarketPlace=US&adInstanceId=4ab47a23-5544-4fcd-83f3-c3b09feaf577"></script>
  header
    h2 #{discussion.topicsFormatted} Announcement#{ discussion.topics != 1 ? 's' : '' }
    include ../partials/pagination
    if session.moderateDiscussions
      nav.actions
        ul
          li.new-announcement
            a(href="topic/action/startAnnouncement") Make an announcement
  if topics
    each topic in topics
      include ../partials/announcement
  else
    p There are no current announcements.

include ../partials/previous-and-next
